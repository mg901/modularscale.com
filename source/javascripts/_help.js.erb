function helpT() {
  if (help == 'help') {
    help = 'help-off';
    document.body.className = 'panel-' + panel + ' mode-' + mode + ' ' + help;
    document.cookie = falseCookie;
    mixpanel.track('Help toggle', {
      'Toggled' : 'off'
    });
  } else {
    help = 'help';
    document.body.className = 'panel-' + panel + ' mode-' + mode + ' ' + help;
    document.cookie = trueCookie;
    mixpanel.track('Help toggle', {
      'Toggled' : 'on'
    });
  }
}

if (document.cookie.includes(trueCookie)) {
  helpT();
}

